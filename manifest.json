{
    "manifest_version": 3,
    "name": "Ari's Chrome Exoskeleton",
    "version": "0.2.0",
    "description": "Ari's Chrome exoskeleton with reusable library",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content/index.ts"]
        }
    ],
    "commands": {
        "increment-counter": {
            "suggested_key": {
                "default": "Ctrl+Shift+I",
                "mac": "Command+Shift+I"
            },
            "description": "Increment page action counter"
        },
        "open-split-tab": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Open split tab with homepage"
        }
    },
    "permissions": ["activeTab", "storage", "tabs"],
    "host_permissions": ["<all_urls>"]
}
