{
    "manifest_version": 3,
    "name": "Ari's Chrome Exoskeleton",
    "version": "0.2.0",
    "description": "Ari's Chrome exoskeleton with reusable library",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background/index.tsx",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content/index.tsx"]
        }
    ],
    "commands": {
        "increment-counter": {
            "suggested_key": {
                "default": "Ctrl+Shift+I",
                "mac": "Command+Shift+I"
            },
            "description": "Increment page action counter"
        },
        "open-split-tab": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Open split tab with homepage"
        },
        "toggle-github-autoscroll": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "Ctrl+Shift+T"
            },
            "description": "Toggle GitHub PR autoscroll"
        },
        "copy-rich-link": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "Command+Shift+C"
            },
            "description": "Copy rich link to clipboard"
        },
        "copy-raw-url": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Copy raw URL to clipboard"
        }
    },
    "permissions": ["activeTab", "storage", "tabs", "notifications"],
    "host_permissions": ["<all_urls>"],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}
