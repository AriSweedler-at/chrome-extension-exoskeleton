{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": ["chrome", "vite/client", "vitest/globals"],
        "baseUrl": ".",
        "paths": {
            "@library/*": ["src/library/*"],
            "@actions/*": ["src/actions/*"],
            "@shared/*": ["src/shared/*"],
            "@theme": ["src/theme/default"],

            "@exo-tabs/*": ["src/exo-tabs/*"],
            "@content/*": ["src/content/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "src/test-setup.tsx"]
}
