{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": ["chrome", "vite/client", "vitest/globals"],
        "baseUrl": ".",
        "paths": {
            "@exo/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
